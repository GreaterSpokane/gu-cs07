                br
                label(for="index-value") Value
                input#index-value-input(type="number", name="value")
                br
                button#IndexButton UPDATE
          td
            div#Employed
              h2 Employed Persons
              label(for="year") Year
              input#employed-year-input(type="number", name="year")
              br
              label(for="county") County
              input#employed-county-input(type="text", name="county")
              br
              label(for="state") State Code
              input#employed-state-input(type="text", name="state")
