extends auth_layout.pug
block page-title
  title Spokane Ecomomic Dashboard | Authorized User Page
block style-sheet
  link(rel='stylesheet' type="text/css" href="css/auth_style.css")
block scripts
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
  script(src="javascripts/update.js")
block content
    div#button-container
      h2 Press to Update Data
      h3#updateStatus Data is ready to update
      label(for="year") Year
      input#API-year-input(type="number", name="year")
      button#updateButton UPDATE
    div#update-table-container
      h1 Manual Indicator Update
      table#update-table
        tr
          td
            div#Median-Household
              h2 Median Household Income
              label(for="year") Year
              input#median-year-input(type="number", name="year")
              br
              label(for="county") County
              input#median-county-input(type="text", name="county")
              br
              label(for="median-state") State Code
              input#median-state-input(type="text", name="state")
              br
              label(for="median-value") Value
              input#median-value-input(type="number", name="value")
              br
              button#MedianButton UPDATE
          td
            div#Laborforce
              h2 Laborforce
              label(for="year") Year
              input#labor-year-input(type="text", name="year")
              br
              label(for="county") County
              input#labor-county-input(type="text", name="county")
              br
              label(for="laborforce-state") State Code
              input#labor-state-input(type="text", name="state")
              br
              label(for="laborforce-value") Value
              input#labor-value-input(type="number", name="value")
              br
              button#LaborforceButton UPDATE
          td 
            div#Housing-Affordability
              h2 Median Housing Cost
              label(for="year") Year
              input#price-year-input(type="number", name="year")
              br
              label(for="county") County
              input#price-county-input(type="text", name="county")
              br
              label(for="affordability-state") State Code
              input#price-state-input(type="text", name="state")
              br
              label(for="affordability-value") Value
              input#price-value-input(type="number", name="value")
              br
              button#PriceButton UPDATE
          td
            div#Laborforce-Participation
              h2 Laborforce Participation
              label(for="year") Year
              input#participation-year-input(type="number", name="year")
              br
              label(for="county") County
              input#participation-county-input(type="text", name="county")
              br
              label(for="laborforce-state") State Code
              input#participation-state-input(type="text", name="state")
              br
              label(for="laborforceParticipation-value") Value
              input#participation-value-input(type="number", name="value")
