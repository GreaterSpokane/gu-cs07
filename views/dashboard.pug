extends layout.pug
block page-title
    title Spokane Economic Dashboard | Dashboard
block style-sheet
    link(rel='stylesheet' type="text/css" href='../css/style.css')
    link(rel='stylesheet' type="text/css" href='../css/dashboard.css')
    link(rel='stylesheet' type="text/css" href='../css/rangeslider.css')
block scripts 
    script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.5.1/nouislider.min.js") 
    script(src="https://cdnjs.cloudflare.com/ajax/libs/wnumb/1.2.0/wNumb.min.js") 
    script(type="module" src="../javascripts/dashboard-utils.js" defer)
block page-name
    h1 Economic Indicator Dashboard
block content
    #app.dashboard
            .tab.w3-bar
                button.tablinks.active(onclick="filtercards(event, 'all')") All
                button.tablinks(onclick="filtercards(event, 'income')") Income
                button.tablinks(onclick="filtercards(event, 'employment')") Employment
                button.tablinks(onclick="filtercards(event, 'housing')") Housing
                button.tablinks(onclick="filtercards(event, 'other')") Other
            hr
            .dashboard-body
                #detailed-view-card
                    .detailed-view-half
                        p
                            b Description about the indicator
                            | Lorem ipsum dolor sit amet, consectetur adipiscing
